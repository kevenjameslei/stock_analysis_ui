{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node"],
    "tsBuildInfoFile": "./.tsbuildinfo",
    "allowImportingTsExtensions": true
  },
  "include": [
    "**/*.config.ts",
    "**/*.config.js",
    "**/*.config.mjs",
    "**/*.config.cjs",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*"
  ]
}
